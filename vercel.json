{
    "version": 2,
    "builds": [
        {
            "src": "apps/web/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        },
        {
            "src": "apps/server/src/index.ts",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/(.+\\.[a-zA-Z0-9]+)$",
            "dest": "/apps/web/dist/$1"
        },
        {
            "src": "/api/(.*)",
            "dest": "/apps/server/src/index.ts"
        },
        {
            "src": "/(.*)",
            "dest": "/apps/web/dist/index.html"
        }
    ]
}