{
    "version": 2,
    "buildCommand": "turbo run build --filter=web... --filter=server...",
    "builds": [
        {
            "src": "apps/web/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        },
        {
            "src": "apps/server/src/index.ts",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/bot/telegram/validate",
            "methods": [
                "POST"
            ],
            "dest": "apps/server/src/index.ts"
        },
        {
            "src": "/api/bot/telegram/bots",
            "methods": [
                "GET",
                "POST"
            ],
            "dest": "apps/server/src/index.ts"
        },
        {
            "src": "/api/bot/telegram/bots/.*",
            "methods": [
                "GET",
                "PUT",
                "DELETE"
            ],
            "dest": "apps/server/src/index.ts"
        },
        {
            "src": "/health",
            "methods": [
                "GET"
            ],
            "dest": "apps/server/src/index.ts"
        },
        {
            "src": "/api/.*",
            "dest": "apps/server/src/index.ts"
        },
        {
            "src": "^/assets/(.*)",
            "dest": "apps/web/dist/assets/$1",
            "headers": {
                "cache-control": "public, max-age=31536000, immutable"
            }
        },
        {
            "src": "^/favicon.ico",
            "dest": "apps/web/dist/favicon.ico"
        },
        {
            "src": "/(.*)",
            "dest": "apps/web/dist/index.html",
            "headers": {
                "cache-control": "public, max-age=0, must-revalidate"
            }
        }
    ]
}