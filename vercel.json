{
    "version": 2,
    "buildCommand": "npm run build",
    "outputDirectory": "dist",
    "builds": [
        {
            "src": "api/webhook.js",
            "use": "@vercel/node",
            "config": {
                "maxDuration": 10,
                "includeFiles": [
                    "api/**",
                    "services/**",
                    "handlers/**",
                    "utils/**",
                    "config/**"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/api/webhook",
            "dest": "/api/webhook.js",
            "methods": [
                "POST"
            ]
        },
        {
            "src": "/static/(.*)",
            "dest": "/static/$1",
            "headers": {
                "cache-control": "public, max-age=31536000, immutable"
            }
        },
        {
            "src": "/((?!api/).*)",
            "dest": "/index.html"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    }
}