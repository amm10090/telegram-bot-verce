{
    "version": 2,
    "builds": [
        {
            "src": "apps/web/package.json",
            "use": "@vercel/static-build",
            "config": {
                "buildCommand": "cd apps/web && pnpm install && NODE_ENV=production pnpm run build",
                "outputDirectory": "apps/web/dist",
                "distDir": "apps/web/dist"
            }
        },
        {
            "src": "apps/server/src/index.ts",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "apps/server/dist/**"
                ],
                "buildCommand": "cd apps/server && pnpm install && tsc"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/apps/web/dist/static/$1",
            "headers": {
                "cache-control": "public,max-age=31536000,immutable"
            }
        },
        {
            "src": "/api/bot/telegram/validate",
            "methods": [
                "POST"
            ],
            "dest": "apps/server/src/index.ts"
        },
        {
            "src": "/api/bot/telegram/bots",
            "methods": [
                "GET",
                "POST",
                "OPTIONS"
            ],
            "dest": "apps/server/src/index.ts"
        },
        {
            "src": "/api/bot/telegram/bots/(.*)",
            "methods": [
                "GET",
                "PUT",
                "DELETE",
                "OPTIONS"
            ],
            "dest": "apps/server/src/index.ts"
        },
        {
            "src": "/api/(.*)",
            "dest": "apps/server/src/index.ts"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/apps/web/dist/index.html"
        }
    ]
}