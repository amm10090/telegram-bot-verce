{
    "version": 2,
    "buildCommand": "turbo run build --filter=web... --filter=server...",
    "builds": [
        {
            "src": "apps/web/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        },
        {
            "src": "apps/server/src/index.ts",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/bot/telegram/validate",
            "methods": [
                "POST"
            ],
            "dest": "apps/server/src/index.ts"
        },
        {
            "src": "/api/bot/telegram/bots",
            "methods": [
                "GET",
                "POST"
            ],
            "dest": "apps/server/src/index.ts"
        },
        {
            "src": "/api/bot/telegram/bots/.*",
            "methods": [
                "GET",
                "PUT",
                "DELETE"
            ],
            "dest": "apps/server/src/index.ts"
        },
        {
            "src": "/health",
            "methods": [
                "GET"
            ],
            "dest": "apps/server/src/index.ts"
        },
        {
            "src": "/api/.*",
            "dest": "apps/server/src/index.ts"
        },
        {
            "src": "^/static/(.*)",
            "dest": "apps/web/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "apps/web/index.html"
        }
    ]
}